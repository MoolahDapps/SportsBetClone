<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="none">

    <com.google.android.material.tabs.TabLayout android:layout_width="match_parent"
                                                android:layout_height="?attr/actionBarSize"
                                                android:id="@+id/tabLayout"
                                                app:tabIndicatorHeight="4dp"
                                                app:tabTextColor="@android:color/white"
                                                app:tabIndicatorColor="@android:color/holo_orange_light"
                                                android:background="@drawable/gradient_background_two"
                                                app:layout_anchor="@+id/app_bar"
                                                app:layout_anchorGravity="bottom"
                                                app:layout_collapseMode="none"
                                                android:layout_gravity="bottom"
                                                app:tabRippleColor="@android:color/white">
        <com.google.android.material.tabs.TabItem android:layout_width="match_parent"
                                                  android:layout_height="match_parent"
                                                  android:tag="Racing"
                                                  android:text="Racing"/>
        <com.google.android.material.tabs.TabItem android:layout_width="match_parent"
                                                  android:layout_height="match_parent"
                                                  android:tag="Sports"
                                                  android:text="Sports"/>

    </com.google.android.material.tabs.TabLayout>

</FrameLayout>